<Window x:Class="BGTI.TechnologyLearningTools.MyWindows.TestStudentWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BGTI.TechnologyLearningTools.MyWindows"
        mc:Ignorable="d"
        Title="TestStudentWindows"  SizeToContent="WidthAndHeight" MinHeight="500" MinWidth="600">
    <Grid Margin="10,10,10,40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition  Width="10*" />
            <ColumnDefinition  Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1"
                    Name="stackContent" 
                    ></StackPanel>
        <Button x:Name="btGO" Click="btGO_Click" Grid.Column="1" Grid.Row="2" Margin="10" Padding="2" >Ответить</Button>
    </Grid>
</Window>
