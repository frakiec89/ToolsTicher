        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BGTI.TechnologyLearningTools.MyWindows"
        mc:Ignorable="d"
        Title="Ввшз Данных"  SizeToContent="WidthAndHeight"  WindowStartupLocation="CenterOwner">
    <Grid Margin="25">
        <StackPanel Margin="5">
            <TextBox MinWidth="150" Margin="5,5,5,0" x:Name="tbContent" ></TextBox>
            <Label Margin="5,0,5,5" VerticalAlignment="Bottom" HorizontalAlignment="Center" x:Name="labelMassege">введите</Label>
            
            <Button x:Name="tbGoContent" Click="tbGoContent_Click">Ввести</Button> 
